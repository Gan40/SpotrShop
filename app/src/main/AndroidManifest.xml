<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sportshop">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.sportshop.Activities.AboutUsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sportshop.Activities.CustomerServiceActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sportshop.Activities.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sportshop.Activities.FavoritesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sportshop.Activities.MyOrdersActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sportshop.Activities.ShoppingCartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sportshop.Activities.ProductDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.sportshop.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>